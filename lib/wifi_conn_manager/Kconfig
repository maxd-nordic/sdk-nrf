menuconfig WIFI_CONN_MGR
	bool "nRF700x Wi-Fi Connection Manager"

if WIFI_CONN_MGR

config WIFI_CONN_MGR_SUPPORTED_CREDS
	int "Number of supported network credentials"
	default 5
	help
		How many different network credentials
		the library supports

config WIFI_CONN_MGR_PSA_UID
	int "UID number where wifi credentials are stored in PSA Protected Storage"
	default 9
	help
		This UID shall be unique and not be used by other parts of the app.

module = WIFI_CONN_MGR
module-dep = LOG
module-str = WiFi Connection Manager library
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endif # WIFI_CONN_MGR
